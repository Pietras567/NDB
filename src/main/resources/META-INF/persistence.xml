<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>NBD.Vehicle</class>
        <class>NBD.Car</class>
        <class>NBD.Motorbike</class>
        <class>NBD.Truck</class>
        <class>NBD.Rent</class>
        <class>NBD.Client</class>
        <properties>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/nbddb"/>

            <property name="jakarta.persistence.jdbc.user"
                      value="nbd"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="nbdpassword"/>

            <!--<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>-->

            <!--<property name="hibernate.agroal.maxSize"
                      value="20"/>-->

            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>


            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.hikari.dataSource.url" value="jdbc:postgresql://localhost:5432/nbddb"/>
            <property name="hibernate.hikari.dataSource.user" value="nbd"/>
            <property name="hibernate.hikari.dataSource.password" value="nbdpassword"/>
            <property name="hibernate.hikari.maximumPoolSize" value="20"/>
        </properties>
    </persistence-unit>
</persistence>